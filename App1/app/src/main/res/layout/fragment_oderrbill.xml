<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white_trans"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/id_fragmentenoder"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/id_fragmentenoder"
            android:id="@+id/id_fragmentprince"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/id_fragmentnumber"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/id_fragmentprince"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="30dp"
            android:text="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:id="@+id/id_fragmentghichu"
            android:textSize="30dp"
            android:layout_below="@+id/id_fragmentnumber"
            android:hint="Ghi Chú"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10sp">

            <Button
                android:id="@+id/id_fragbtn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xác Nhận" />

            <Button
                android:id="@+id/id_fragbtn_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Huỷ" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>